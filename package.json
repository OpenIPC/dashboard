{
  "name": "openipc-dashboard",
  "version": "2.2.2",
  "description": "App for managing OpenIPC cameras",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": {
    "name": "Rinibr"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^29.1.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "axios": "^1.6.8",
    "ssh2": "^1.15.0",
    "ws": "^8.17.1"
  },
  "build": {
    "appId": "com.vavol.openipcdashboard",
    "productName": "OpenIPC Dashboard",
    "copyright": "Copyright Â© 2025 Rinat Ibragimov",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true
    },
    "portable": {
      "artifactName": "${productName} Portable ${version}.${ext}"
    },
    "files": [
      "**/*",
      "!dist/",
      "!*.code-workspace"
    ],
    "asarUnpack": [
      "**/node_modules/@ffmpeg-installer/ffmpeg/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "Rinibr",
      "repo": "openipc-dashboard"
    }
  }
}